<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/btn_support"
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text="@string/init_number"
        android:gravity="center"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/filtershow_button_redo" />
    <TextView
        android:id="@+id/support_number"
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text="@string/init_number"
        android:gravity="center"
        android:drawablePadding="-5dp"
        android:drawableLeft="@drawable/filtershow_button_redo"/>
    <TextView
        android:id="@+id/btn_oppose"
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:text="@string/init_number"
        android:gravity="center"
        android:drawablePadding="-5dp"
        android:drawableLeft="@drawable/filtershow_button_undo"/>
    <TextView
        android:id="@+id/oppose_number"
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_toRightOf="@id/btn_oppose"
        android:text="@string/init_number"
        android:gravity="center"
        android:drawablePadding="-5dp"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/btn_share"
        android:layout_height="match_parent"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_centerVertical="true"
        android:text="@string/init_number"
        android:gravity="center"
        android:drawablePadding="-5dp"
        android:drawableLeft="@drawable/ic_action_overflow"/>

</merge>